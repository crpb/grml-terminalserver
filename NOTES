# cmds booting new grml
cp /live/image/boot/isolinux/initrd.gz /boot/initrd.img-2.6.22-grml
#vi /etc/initramfs-tools/initramfs.conf
#    MODULES=netboot
#    BOOT=nfs
sed -i '/^MODULES=.*/MODULES=netboot/' /etc/initramfs-tools/initramfs.conf
update-initramfs -u -t

grml-terminalserver-config
mkdir /cdrom
mount --bind /live/image /cdrom
grml-terminalserver config dhcp
grml-terminalserver start dhcp

grml-terminalserver config tftp
cp /boot/initrd.img-2.6.22-grml /var/lib/tftpboot/initrd.gz
cp /live/image/boot/isolinux/minirt26.gz /var/lib/tftpboot/

grml-terminalserver start nfs

cp initrd.gz minirt26.gz
